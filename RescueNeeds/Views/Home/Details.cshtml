@model IEnumerable<RescueNeeds.Service.CampRequirement>

@{
    ViewBag.Title = "Details";
}

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Available in camps
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Need)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Recieved)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Camp.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Item.Name)
                        </th>
                        
                    </tr>
                <thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Need)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Recieved)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Camp.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Item.Name)
                            </td>
                         
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>